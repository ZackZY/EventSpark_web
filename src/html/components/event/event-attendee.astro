---
import { apiUrlHelper, fetchFromApi } from "../../../utils/api.config";
//npm install moment
import moment from 'moment';

const { message = "" } = Astro.props;
const path = "../../../dist";
const events = await fetchFromApi(apiUrlHelper.EventsAPI + "/user/" + "78f27d0f-5dcc-4c33-9908-739b6d0de607", "GET");

// Sort events by eventDate (desc) and eventName (asc)
events.sort((a, b) => {
  const dateA = new Date(a.eventDate);
  const dateB = new Date(b.eventDate);

  // Sort by eventDate in descending order
  if (dateA > dateB) return -1;
  if (dateA < dateB) return 1;

  // If eventDate is the same, sort by eventName in ascending order
  return a.eventName.localeCompare(b.eventName);
});

const mainPage = "event";
const page = "event-attendee";
---

<get-func data-message={message}>
  <div class="app-content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card mb-4">
            <div class="card-header align-items-center">
              <h3 class="card-title" id="pageTitle">Manage Events</h3>
            </div>
            <div class="card-body p-0">
              <table class="table table-striped" id="dataTable">
                <thead>
                  <tr>
                    <th class="col-1" style="width: 30px;">#</th>
                    <th class="col-1">Event Name</th>
                    <th class="col-2">Event Description</th>
                    <th class="col-1">Event Date</th>
                    <th class="col-1">Start Time</th>
                    <th class="col-1">End Time</th>
                    <th class="col-1">Location</th>
                    <th class="col-1">Type</th>
                    <th class="col-1">Status</th>
                    <th class="col-1" style="width: 120px;">Invited At</th>
                    <th class="col-1" style="width: 120px;">Attended At</th>
                  </tr>
                </thead>
                <tbody>
                  {
                    events.map((data, index) => (
                      <tr class="align-middle">
                        <td>{index + 1}</td>
                        <td>
                          {data.eventName}
                        </td>
                        <td>{data.eventDescription}</td>
                        <td>{moment.utc(data.eventDate).format('MM/DD/YYYY')}</td>
                        <td>{moment.utc(data.eventTimeStart).format('hh:mm A')}</td>
                        <td>{moment.utc(data.eventTimeEnd).format('hh:mm A')}</td>
                        <td>{data.eventLocation}</td>
                        <td>{data.eventType}</td>
                        <td>{data.EventAttendees.status}</td>
                        <td>{moment.utc(data.EventAttendees.dateTimeInvited).format('MM/DD/YYYY hh:mm A')}</td>
                        <td>{data.EventAttendees.dateTimeAttended ? moment.utc(data.EventAttendees.dateTimeAttended).format('MM/DD/YYYY hh:mm A') : ''}</td>

                        <td>
                        </td>
                      </tr>
                    ))
                  }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div
        id="toastSuccess"
        class="toast toast-success"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
        style="position: absolute; bottom: 20px; right: 20px;"
      >
        <div class="toast-header">
          <div class="spinner-border spinner-border-sm text-light me-2"></div>
          <strong class="me-auto">Update Event</strong>
          <small id="toastTime">value</small>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="toast"
            aria-label="Close"></button>
        </div>
        <div class="toast-body" id="toastBody">
        </div>
      </div>
    </div>
  </div>

  <script></script>
</get-func>
