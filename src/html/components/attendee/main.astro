---
import { apiUrlHelper, fetchFromApi } from "../../../utils/api.config";
import Create from "@components/attendee/create.astro";

const { message = "" } = Astro.props;
const path = "../../../dist";
const events = await fetchFromApi(apiUrlHelper.EventsAPI + "/" + "11a4e240-c71c-4304-9d0d-3e5fdd74613d", "GET");
const mainPage = "attendee";
const page = "main";

---

<get-func data-message={message}>
  <div class="app-content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card mb-4">
            <div class="card-header align-items-center">
              <h3 class="card-title" id="pageTitle">{events.eventName}</h3>
              <div class="card-tools">
                <Create message="" />
              </div>
            </div>
            <div class="card-body p-0">
              <table class="table table-striped" id="dataTable">
                <thead>
                  <tr>
                    <th class="col-1">#</th>
                    <th class="col-2">Name</th>
                    <th class="col-2">Email</th>
                    <th class="col-1">Contact</th>
                    <th class="col-1">Status</th>
                    <th class="col-2">Created At</th>
                    <th class="col-2">Updated At</th>          
                  </tr>
                </thead>
                <tbody>
                  {
                    events.Users.filter((data) => data.EventAttendees.typeOfAttendee === 'Attendee').map((data, index) => (
                      <tr class="align-middle">
                        <td>{index + 1}</td>
                        <td>{data.name}</td>
                        <td>{data.email}</td>
                        <td>{data.contactNumber}</td>
                        <td>{data.EventAttendees.status}</td>
                        <td>{data.createdAt}</td>
                        <td>{data.updatedAt}</td>
                      </tr>
                    ))
                  }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div
        id="toastSuccess"
        class="toast toast-success"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
        style="position: absolute; bottom: 20px; right: 20px;"
      >
        <div class="toast-header">
          <div class="spinner-border spinner-border-sm text-light me-2"></div>
          <strong class="me-auto">Add Attendee</strong>
          <small id="toastTime">value</small>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="toast"
            aria-label="Close"></button>
        </div>
      </div>
    </div>
  </div>

  <script></script>
</get-func>
